#!/usr/bin/expect -f
#
# link_test.exp - Test linking with FORTRAN OTS
#

set timeout 300
log_user 1

spawn pdp11 -n
expect "sim>"
send "SET CPU 11/70\r"; expect "sim>"
send "SET CPU 1M\r"; expect "sim>"
send "SET CPU FPP\r"; expect "sim>"
send "SET CPU IDLE\r"; expect "sim>"
send "SET RL ENABLE\r"; expect "sim>"
send "SET RL0 RL01,WRITEENABLED\r"; expect "sim>"
send "ATTACH RL0 media/rsxm_work.rl01\r"; expect "sim>"
send "SET RL1 RL01\r"; expect "sim>"
send "ATTACH RL1 media/F4_IAS_RSX_2.1.rl01\r"; expect "sim>"
send "BOOT RL0\r"

expect "PLEASE ENTER TIME AND DATE"; sleep 1; send "19:00 19-JAN-78\r"
expect "LINE WIDTH"; sleep 1; send "80\r"
expect "@ <EOF>"; sleep 3

send "INS \$BOO\r"; expect ">"; sleep 2
send "BOO \[1,54\]\r"

expect "PLEASE ENTER TIME AND DATE"; sleep 1; send "19:01 19-JAN-78\r"
expect "LINE WIDTH"; sleep 1; send "80\r"
expect "@ <EOF>"; sleep 3

send "MOU DL1:FOR\r"; expect ">"
send "INS \$PIP\r"; expect ">"
send "INS \$TKB\r"; expect ">"
send "INS \$LBR\r"; expect ">"

# Install FORTRAN compiler
send "INS DL0:\[1,54\]FOR\r"
expect ">"
sleep 2

# Create FOROTS.OLB library from the object modules
puts "\n=== Creating FOROTS.OLB from object modules ===\n"
send "SET /UIC=\[1,1\]\r"; expect ">"
send "LBR FOROTS.OLB/CR=DL0:\[1,24\]FOROTS.OBJ,DL0:\[1,24\]FORNHD.OBJ,DL0:\[1,24\]FORFPU.OBJ\r"
expect ">"
sleep 2

# Verify library
send "PIP FOROTS.OLB/LI\r"
expect ">"
sleep 1

# Compile test
send "SET /UIC=\[1,24\]\r"
expect ">"
send "FOR FORTST=FORTST\r"
set timeout 120
expect {
    ".MAIN." {
        puts "\n=== Compiled ===\n"
        expect ">"
    }
    timeout {
        puts "\n*** Timeout ***\n"
    }
}

# Link with the new library
puts "\n=== Linking with FOROTS.OLB ===\n"
send "TKB FORTST/FP=FORTST,DL0:\[1,1\]FOROTS/LB\r"
set timeout 60
expect {
    "TKB>" {
        send "/\r"
        expect ">"
    }
    "UNDEFINED" {
        puts "\n=== Still undefined symbols ===\n"
        expect ">"
    }
    ">" {
        puts "\n=== Link done ===\n"
    }
    timeout {
        puts "\n*** Link timeout ***\n"
    }
}

# Check for task
send "PIP FORTST.TSK/LI\r"
expect ">"

# Try running
puts "\n=== Running ===\n"
send "RUN FORTST\r"
set timeout 30
expect {
    "DEMONSTRATION" {
        puts "\n=== SUCCESS! ===\n"
        expect ">"
    }
    timeout {
        puts "\n*** Run timeout ***\n"
    }
}

puts "\n=== Done ===\n"
interact
